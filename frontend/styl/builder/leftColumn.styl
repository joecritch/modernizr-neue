.leftColumn {
  @extend $hiddenScrollbar

  position: fixed
  top: $HeaderHeight + $StandardPadding
  bottom: $StandardPadding
  margin-right: $StandardPadding
  width: 330px
  overflow: scroll
  transition: top $TransitionDuration

  .toggle {
    width: 1.2em
    top: 0
    right: 0
  }

  .option {
    display: block
    line-height: 24px
  }

  .option-separator {
    border-top: 1px solid #ececec
    padding-top: 1em
    margin-top: 1em
  }

  .heading-small {
    padding-bottom: 6px
    margin-bottom: 0
  }
}

.transition .leftColumn {
  top: $HeaderHeight + $StandardPadding + $TransitionHeight
}


.leftColumn-selected {
  display: flex
  justify-content: space-between
  align-items: flex-end
  line-height: 1.4em
}

.leftColumn-stats {
  font-size: 16px
}

.leftColumn-toggle {
  border: none
  background: none
  cursor: pointer
  padding: 0

  &:hover,
  &:focus {
  color: $ModernizrPink
  outline: none
  }
}

.leftColumn-options {
  padding: 0 24px 12px
  background: $White
}

.classPrefix {
  border: $lightBorder
  line-height: 1.3em
}

.classNameAdded {
  background: $ModernizrPink
  color: $White
}

.filesizes {
  color: #909090
  font-size: 12px
}

@media (max-width: $largeScreen) {
  .leftColumn {
    position: absolute
    top: $HeaderHeight
    width: 100%
    z-index: 2
    bottom: auto
    border-top: $lightBorder

    .heading-small {
      background: $ModernizrPink
      color: $White
      text-align: center
      line-height: $HeaderButtonHeight
      text-transform: uppercase
      padding: 0
      cursor: pointer
      -webkit-user-select: none
      user-select: none
    }
  }

  .leftColumn-options {
    padding: 12px 24px
    display: none

    .option {
      line-height: 40px
      font-size: 20px
    }
  }

  .leftColumn-stats {
    min-height: $StatsHeight
    display: flex
    flex-direction: column
    justify-content: center
  }

  .heading-small.active + .leftColumn-options {
    display: block
  }
}

@media (max-width: $mediumScreen) {
  .leftColumn {
    top: $HeaderHeight + $HeaderButtonHeight
  }
}

@media (max-width: $smallScreen) {
  .leftColumn {
    top: $SmallHeaderHeight + $HeaderButtonHeight
    z-index: initial
  }

  .leftColumn-options {
    position: relative
    z-index: 1
  }
}
